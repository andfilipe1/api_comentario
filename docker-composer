version: '3.4'

services:
  api-postgrees:
    image: postgres:latest
    restart: always
    ports:
      - "5432:5432"
    networks:
      - api-network

  api_comentario:
    image: andfilipe1/api_comentario
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "8080:80"
    networks:
      - api-network
    depends_on:
      - api-postgrees

networks: 
    api-network:
        driver: overlay
